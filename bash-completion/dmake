_dmake()
{
	local cur prev words cword
	_init_completion -s || return

	case $prev in
	-F|--dockerfile)
		_filedir
		return
		;;
	-C|--directory)
		_filedir -d
		return
		;;
	esac

	local short_opts="-F -C -h"
	local long_opts="--dockerfile --directory --help"
	COMPREPLY=( $( compgen -W "$short_opts $long_opts" -- "$cur" ) )
} &&
complete -F _dmake dmake
